    <section class="relative h-screen flex items-center justify-center ">
        <!-- Responsive Background Images -->
        <div class="absolute inset-0 z-0">
            <picture>
                <!-- Mobile WebP -->
                <source type="image/webp" media="(max-width: 767px)" srcset="/images/scenic-bg-mobile@3x.jpg.webp 3x, /images/scenic-bg-mobile@2x.jpg.webp 2x, /images/scenic-bg-mobile.jpg.webp 1x">
                <!-- Mobile JPEG fallback -->
                <source media="(max-width: 767px)" srcset="/images/scenic-bg-mobile@3x.jpg 3x, /images/scenic-bg-mobile@2x.jpg 2x, /images/scenic-bg-mobile.jpg 1x">
                <!-- Desktop WebP -->
                <source type="image/webp" media="(min-width: 768px)" srcset="/images/scenic-bg.webp">
                <!-- Desktop JPEG fallback -->
                <source media="(min-width: 768px)" srcset="/images/scenic-bg.jpg">
                <!-- Fallback image -->
                <img src="/images/scenic-bg.jpg" alt="Scenic background" class="w-full h-full object-cover opacity-100" loading="eager">
            </picture>
            <div class="absolute bottom-2 left-1/2 transform -translate-x-1/2 bg-black bg-opacity-40 rounded px-2 py-1 text-xs text-white text-center pointer-events-none select-none">
