<!-- Header Section -->
<header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 sm:h-20 md:h-40">
            <!-- Profile Section -->
            <div class="flex items-center space-x-4">
                <!-- Portrait Photo (Circular) -->
                <div class="relative">
                    <img 
                        src="/images/portrait.jpg" 
                        alt="{{ site.name }} portrait" 
                        class="w-12 h-12 sm:w-16 sm:h-16 md:w-40 md:h-40 flex-shrink-0 rounded-full object-cover border-2 border-transparent shadow-sm"
                        loading="eager"
                    >
                </div>
                
                <!-- Name -->
                <div>
                    <h1 class="text-xl sm:text-2xl font-semibold text-gray-900">
                        {{ site.name }}
                    </h1>
                    <p class="text-sm text-gray-600 hidden sm:block">
                        Based in {{ site.location }}
                    </p>
                </div>
            </div>
            
            <!-- LinkedIn Button -->
            <div>
                <a link
                    href="{{ site.linkedin }}" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                >
                    <!-- LinkedIn Icon -->
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    LinkedIn
                </a>
            </div>
        </div>
    </div>
</header>

<!-- Main Content Section -->
